
<link rel="stylesheet" type="text/css" href="messages.css">

<%= stylesheet_link_tag 'messages' %>

<%= form_for @message, url:messages_url(room_id: params["room_id"]) do |message| %>
	<div class="form-group">
		<p><%= message.text_area :body, class: "form-control", placeholder: "What's on your mind?" %></p>
		<!-- <p>Room <%= message.collection_select(:room_id, Room.all, :id, :title, {}, {class: "form-control"}) %></p> -->
	</div>
	<%= message.button 'Send A Message', class: "btn btn-primary" %>
<% end %>
