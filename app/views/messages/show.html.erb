<h1><%= @message.title %></h1>
<h2><%= @message.body %></h2>
<h2>Votes: <%= @message.vote %></h2>
<h2>Room: <%= @message.room.title %></h2>

<h3><%= link_to "Update Message", edit_message_url %></h3>

<p> <%= link_to "Add a Reply", new_reply_url(message_id: @message.id) %></p>

<p>Replies</p>
<% @message.replies.each do |reply| %>
	<p><%= reply.body %></p>
<% end %>
