	        <div class="block_1"></div> <hr/>
	        <div class="col-md-11">
	            <%= link_to message.body, message_url(message), class: "btn btn-primary messagebox" %>
	        </div>
	        <div class="col-md-1">
	            <div class="short-div">
	            	<%= link_to content_tag(:i, nil, class: "fa fa-chevron-up"), new_vote_url(message_id: message.id, user_id: session["user_id"]) %> 
            	</div>
            	<div class="short-div votecount">
	      			<%= message.votes.count%>
	      		</div>
	        </div>
	    </div>
